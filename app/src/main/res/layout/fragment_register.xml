<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.matrixdev.dremergency.Controllers.Authentication.RegisterFragment">

    <ScrollView
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/space_140_dip"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/space_10_dip">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space_15_dip"
                    android:layout_marginStart="@dimen/space_15_dip"
                    android:layout_marginTop="@dimen/space_7_dip"
                    android:textColorHint="#4C5056"
                    app:hintTextAppearance="@style/TextInput">

                    <EditText
                        android:id="@+id/name_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Name"
                        android:inputType="textPersonName" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/register_designation_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space_15_dip"
                    android:layout_marginStart="@dimen/space_15_dip"
                    android:layout_marginTop="@dimen/space_7_dip"
                    android:textColorHint="#4C5056"
                    app:hintTextAppearance="@style/TextInput">

                    <EditText
                        android:id="@+id/register_designation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Designation"
                        android:inputType="textMultiLine" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/email_roll_no_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space_15_dip"
                    android:layout_marginStart="@dimen/space_15_dip"
                    android:layout_marginTop="@dimen/space_7_dip"
                    android:textColorHint="#4C5056"
                    app:hintTextAppearance="@style/TextInput">

                    <EditText
                        android:id="@+id/register_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Email"
                        android:inputType="textEmailAddress" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/register_mobile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space_15_dip"
                    android:layout_marginStart="@dimen/space_15_dip"
                    android:layout_marginTop="@dimen/space_7_dip"
                    android:textColorHint="#4C5056"
                    app:hintTextAppearance="@style/TextInput">

                    <EditText
                        android:id="@+id/register_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Contact Number"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/register_age_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space_15_dip"
                    android:layout_marginStart="@dimen/space_15_dip"
                    android:layout_marginTop="@dimen/space_7_dip"
                    android:textColorHint="#4C5056"
                    app:hintTextAppearance="@style/TextInput">

                    <EditText
                        android:id="@+id/register_age"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Age"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/register_address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space_15_dip"
                    android:layout_marginStart="@dimen/space_15_dip"
                    android:layout_marginTop="@dimen/space_7_dip"
                    android:textColorHint="#4C5056"
                    app:hintTextAppearance="@style/TextInput">

                    <EditText
                        android:id="@+id/register_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Address"
                        android:inputType="textMultiLine" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/register_location_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space_15_dip"
                    android:layout_marginStart="@dimen/space_15_dip"
                    android:layout_marginTop="@dimen/space_7_dip"
                    android:textColorHint="#4C5056"
                    app:hintTextAppearance="@style/TextInput">

                    <EditText
                        android:focusable="false"
                        android:id="@+id/register_location"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Location"
                        android:inputType="textMultiLine" />
                </android.support.design.widget.TextInputLayout>


                <LinearLayout
                    android:paddingLeft="@dimen/space_15_dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space_15_dip"
                    android:layout_marginStart="@dimen/space_15_dip"
                    android:layout_marginTop="@dimen/space_7_dip"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_gravity="center"
                        android:text="Gender : "
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />


                    <RadioGroup
                        android:id="@+id/register_gender_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:checked="true"
                            android:id="@+id/register_gender_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Male" />

                        <RadioButton
                            android:id="@+id/register_gender_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Female" />

                        <RadioButton
                            android:id="@+id/register_gender_others"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Others" />

                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="@dimen/space_15_dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space_15_dip"
                    android:layout_marginStart="@dimen/space_15_dip"
                    android:layout_marginTop="@dimen/space_7_dip"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_gravity="center"
                        android:text="Role : "
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />


                    <RadioGroup
                        android:id="@+id/register_role_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:checked="true"
                            android:id="@+id/register_role_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User" />

                        <RadioButton
                            android:id="@+id/register_role_doctor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Doctor" />


                    </RadioGroup>
                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:visibility="gone"
                    android:id="@+id/register_qualifications_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space_15_dip"
                    android:layout_marginStart="@dimen/space_15_dip"
                    android:layout_marginTop="@dimen/space_7_dip"
                    android:textColorHint="#4C5056"
                    app:hintTextAppearance="@style/TextInput">

                    <EditText
                        android:id="@+id/register_qualifications"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Qualifications"
                        android:inputType="textMultiLine" />
                </android.support.design.widget.TextInputLayout>


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padd_10"
                    android:layout_marginTop="@dimen/space_30_dip"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/blood_group_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                    </LinearLayout>

                </HorizontalScrollView>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/register_password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space_15_dip"
                    android:layout_marginStart="@dimen/space_15_dip"
                    android:layout_marginTop="@dimen/space_7_dip"
                    android:textColorHint="#4C5056"
                    app:hintTextAppearance="@style/TextInput">

                    <EditText
                        android:id="@+id/register_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Password"
                        android:inputType="textPassword" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/register_re_password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space_15_dip"
                    android:layout_marginStart="@dimen/space_15_dip"
                    android:layout_marginTop="@dimen/space_7_dip"
                    android:textColorHint="#4C5056"
                    app:hintTextAppearance="@style/TextInput">

                    <EditText
                        android:id="@+id/register_re_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Re-Enter Password"
                        android:inputType="textPassword" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/register_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_40_dip"
                    android:layout_marginBottom="@dimen/space_1_dip"
                    android:layout_marginEnd="@dimen/space_15_dip"
                    android:layout_marginStart="@dimen/space_15_dip"
                    android:layout_marginTop="@dimen/space_18_dip"
                    android:background="@drawable/register_button"
                    android:text="Create my account"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="@dimen/space_10_dip"
                    android:layout_marginStart="@dimen/space_10_dip"
                    android:layout_marginTop="@dimen/space_5_dip"
                    android:text="@string/disclaimer_text1_register"
                    android:textAlignment="center"
                    android:textColor="#202020"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/space_12_dip"
                    android:layout_marginEnd="@dimen/space_10_dip"
                    android:layout_marginStart="@dimen/space_10_dip"
                    android:layout_marginTop="@dimen/space_0_dip"
                    android:text="@string/GoCardProTerms"
                    android:textAlignment="center"
                    android:textColor="#0075B4"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
