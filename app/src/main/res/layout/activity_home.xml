<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.matrixdev.dremergency.Controllers.Authentication.HomeActivity">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="@color/dark_translucent_black"
        android:scaleType="fitXY"
        android:src="@drawable/bkg" />

    <ImageView
        android:id="@+id/bvp_image"
        android:layout_width="150dp"
        android:paddingRight="@dimen/space_10_dip"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="25dp"
        android:scaleType="fitXY"
        android:src="@drawable/app_icon" />

    <RelativeLayout
        android:id="@+id/sos"
        android:elevation="@dimen/space_5_dip"
        android:layout_marginTop="@dimen/space_45_dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bvp_image"
        android:layout_centerHorizontal="true">

        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_width="@dimen/space_150_dip"
            android:layout_height="@dimen/space_150_dip"
            android:src="@color/glow_red"
            app:civ_border_color="@color/black"
            app:civ_border_width="@dimen/space_2_dip" />

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="SOS"
                android:textColor="@color/white_color"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/white_color"
                android:gravity="center"
                android:text="Request doctors\n nearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/textV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="193dp"
        android:fontFamily="sans-serif"
        android:text="Create..Share..Grow"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        android:visibility="gone" />


    <FrameLayout
        android:id="@+id/home_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    </FrameLayout>


</RelativeLayout>
