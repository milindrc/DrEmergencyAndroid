<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:minHeight="@dimen/space_40_dip"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_image"
        android:scaleType="centerCrop"
        android:padding="@dimen/space_15_dip"
        android:src="@drawable/student"
        android:minHeight="@dimen/space_200_dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:background="@color/dark_translucent_black"
        android:id="@+id/profile_name"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ANdy"
        android:textColor="@color/white_color"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/space_35_dip"
        />

</RelativeLayout>