<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context="com.sdkhightech.gocardpro.Controllers.Authentication.SplashFragment">
    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/authentication_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:alpha="0"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/home_register_button"
            android:layout_width="@dimen/space_0_dip"
            android:layout_height="@dimen/space_50_dip"
            android:layout_weight="1"
            android:background="#A6000000"
            android:text="Register"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="15sp" />

        <View
            android:layout_width="0.1dip"
            android:layout_height="match_parent"
            android:background="#40FFFFFF">

        </View>

        <Button
            android:id="@+id/sign_btn"
            android:layout_width="@dimen/space_0_dip"
            android:layout_height="@dimen/space_50_dip"
            android:layout_weight="1"
            android:background="#A6000000"
            android:text="Sign In"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="@dimen/space_15_dip" />
    </LinearLayout>


</RelativeLayout>
