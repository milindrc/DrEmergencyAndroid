<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/space_15_dip"
    android:paddingRight="@dimen/space_15_dip"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="@dimen/space_10_dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:padding="@dimen/padd_10"
            android:elevation="@dimen/space_5_dip"
            android:background="@drawable/clean_border_white"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_5_dip">

            <TextView
                android:text="Name* :"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/space_15_dip"
                android:textSize="15sp"
                android:ems="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/sos_name"
                android:layout_marginLeft="@dimen/space_5_dip"
                android:textSize="@dimen/space_20_dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:padding="@dimen/padd_10"
            android:elevation="@dimen/space_5_dip"
            android:background="@drawable/clean_border_white"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_5_dip">

            <TextView
                android:text="Problem* :"
                android:textStyle="bold"
                android:ems="5"
                android:layout_marginLeft="@dimen/space_15_dip"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/sos_note"
                android:layout_marginLeft="@dimen/space_5_dip"
                android:textSize="@dimen/space_20_dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:padding="@dimen/padd_10"
            android:elevation="@dimen/space_5_dip"
            android:background="@drawable/clean_border_white"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_5_dip">

            <TextView
                android:text="Mobile* :"
                android:textStyle="bold"
                android:ems="5"
                android:layout_marginLeft="@dimen/space_15_dip"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/sos_mobile"
                android:layout_marginLeft="@dimen/space_5_dip"
                android:textSize="@dimen/space_20_dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:padding="@dimen/padd_10"
            android:elevation="@dimen/space_5_dip"
            android:background="@drawable/clean_border_white"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_5_dip">

            <TextView
                android:text="Address :"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/space_15_dip"
                android:ems="5"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/sos_address"
                android:layout_marginLeft="@dimen/space_5_dip"
                android:textSize="@dimen/space_20_dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:padding="@dimen/padd_10"
            android:elevation="@dimen/space_5_dip"
            android:background="@drawable/clean_border_white"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_5_dip">

            <TextView
                android:text="Location* :"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/space_15_dip"
                android:ems="5"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:focusable="false"
                android:id="@+id/sos_location"
                android:layout_marginLeft="@dimen/space_5_dip"
                android:textSize="@dimen/space_20_dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:id="@+id/sos_submit"
            android:backgroundTint="@color/transcluscent_red"
            android:text="Send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>